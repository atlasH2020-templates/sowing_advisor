  "components": {
    "schemas": {
      "FieldURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of a field with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "AdviceURN": {
        "type": "string",
        "pattern": "^urn:[a-z][a-z0-9_.\\-]*:[\\w-.]+",
        "description": "Uniform resource name of an advice with the syntax `urn:<service_id>:<internal_id>`. <service_id> must be the id of a valid and active ATLAS service"
      },
      "MonitoringRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "notification_url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "field_urn"
        ],
        "example": {
          "field_urn": "urn:com.agricircle.atlas.field_data:fdbe6f55-6179-4b88-9177-4afbed33adac"
        }
      },
      "MonitoringInfo": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice preparation"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          },
          "recommendations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Recommendation"
            }
          }
        },
        "example": {
          "status": "READY",
          "recommendations": [
            {
              "earliest": "2021-10-31T00:00:00Z",
              "latest": "2021-11-15T00:00:00Z"
            }
          ]
        }
      },
      "AdviceRequest": {
        "type": "object",
        "properties": {
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "application": {
            "$ref": "#/components/schemas/Application"
          }
        },
        "required": [
          "field_urn",
          "application"
        ]
      },
      "Advice": {
        "type": "object",
        "properties": {
          "urn": {
            "$ref": "#/components/schemas/AdviceURN"
          },
          "type": {
            "type": "string",
            "pattern": "sowing"
          },
          "field_urn": {
            "$ref": "#/components/schemas/FieldURN"
          },
          "applications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Application"
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "IN_PROGRESS",
              "CONFIGURATION_REQUIRED",
              "READY",
              "FAILED"
            ],
            "description": "status of the advice"
          },
          "status_message": {
            "type": "string",
            "description": "end-user-friendly message describing the status. In the special case where status is CONFIGURATION_REQUESTED, the message MUST be a browser URL to a configuration UI where further configuration can take place"
          }
        },
        "required": [
          "urn",
          "type",
          "field_urn",
          "applications",
          "status"
        ]
      },
      "Application": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "type": {
            "readOnly": true,
            "type": "string",
            "pattern": "sowing"
          },
          "seed": {
            "$ref": "#/components/schemas/Seed"
          }
        },
        "required": [
          "application_ref",
          "type",
          "seed"
        ]
      },
      "ApplicationDetails": {
        "type": "object",
        "properties": {
          "application_ref": {
            "type": "string",
            "pattern": "^\\w+$"
          },
          "type": {
            "type": "string",
            "pattern": "sowing"
          },
          "seed": {
            "$ref": "#/components/schemas/Seed"
          },
          "application_map": {
            "type": "object",
            "properties": {
              "total_amount": {
                "type": "number",
                "format": "float"
              },
              "download_url": {
                "type": "string",
                "format": "uri",
                "description": "URL to download the GeoPackage application_map (with GET and service Bearer token). Application maps should be requested just-in-time, just before starting the actual work on a field."
              },
              "url_expires_at": {
                "type": "string",
                "format": "date-time",
                "description": "date/time at which download URL expires"
              }
            },
            "required": [
              "total_amount",
              "download_url"
            ]
          }
        },
        "required": [
          "application_ref",
          "type",
          "seed",
          "application_map"
        ]
      },
      "Seed": {
        "type": "object",
        "properties": {
          "variety": {
            "type": "string"
          },
          "crop_id": {
            "readOnly": true,
            "type": "string",
            "description": "Taken from FAO's LIST OF CROPS, BOTANICAL NAME AND CODE NUMBER (see field_data specifications)"
          },
          "unit": {
            "type": "string",
            "enum": [
              "kg",
              "count"
            ]
          },
          "weight_of_1000": {
            "type": "number",
            "format": "float",
            "description": "weight of 1000 seeds (in kg)"
          }
        },
        "required": [
          "crop_id",
          "unit",
          "weight_of_1000"
        ]
      },
      "Recommendation": {
        "type": "object",
        "properties": {
          "earliest": {
            "type": "string",
            "format": "date-time",
            "description": "earliest recommended date/time by which a sowing advice/task should be performed"
          },
          "latest": {
            "type": "string",
            "format": "date-time",
            "description": "latest recommended date/time by which a sowing advice/task should be performed"
          }
        },
        "example": {
          "earliest": "2021-10-31T00:00:00Z",
          "latest": "2021-11-15T00:00:00Z"
        },
        "required": [
          "latest"
        ],
        "description": "Info about a sowing operation that should be performed"
      },
      "SimpleError": {
        "type": "string",
        "description": "Plain text message (may be empty).",
        "example": "optional error message"
      },
      "DetailedError": {
        "type": "object",
        "description": "This defines the structure of an error payload when one is present. Actual messages and additional error information content may change from one implementation to another",
        "properties": {
          "message": {
            "type": "string",
            "description": "error description"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional detailed information"
          }
        },
        "required": [
          "message"
        ],
        "example": {
          "message": "general error message",
          "errors": [
            "optional",
            "additional",
            "details"
          ]
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
